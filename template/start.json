{
  "apps": [{
    "name": "{{name}}",
    "max_memory_restart": "500M",
    "script": "./server/index.js",
    "instances": 4,
    "exec_mode": "cluster",
    "watch": [".nuxt"],
    "ignore_watch": [
      "node_modules",
      "logs",
      "static"
    ],
    "watch_options": {
      "followSymlinks": false
    },
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "combine_logs": true,
    "error_file": "./logs/{{name}}-err.log",
    "out_file": "./logs/{{name}}-out.log",
    "env_prod": {
      "NODE_ENV": "prod"
    },
    "env_test": {
      "NODE_ENV": "test"
    },
    "env_dev": {
      "NODE_ENV": "dev"
    }
  }]
}
